<!DOCTYPE html>
<html ng-app="register">
    <head>
        <title><%= title %></title>
        <link rel='stylesheet' href='/stylesheets/style.css' />
        <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    </head>
    <body>
        <div ng-include src="'/header/header.ejs'"></div>
        <div class="col-md-6 col-md-offset-3">
            <div class="page-header">
                <h1>Register</h1>
            </div>
            <div ng-controller="RegisterCtrl">
                <div ng-show="error" class="alert alert-danger row">
                    <span>{{ error.message }}</span>
                </div>
                <form ng-submit="register()" style="margin-top:30px;">
                    <div class="form-group">
                        <label for="username">Username: </label>
                        <input type="text" class="form-control" id="email" placeholder="Username" ng-model="user.username">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control" id="password" placeholder="Password" ng-model="user.password">
                    </div>
                    <div class="form-group">
                        <label for="password">Password (Confirmation)</label>
                        <input type="password" class="form-control" id="password" placeholder="Password (Confirmation)" ng-model="user.confirmation.Password">
                    </div>
                    <button type="submit" class="btn btn-default">Register</button>
                </form>
            </div>
        </div>

        <!-- jQuery library -->
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>

        <!-- Latest compiled JavaScript -->
        <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>

        <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js"></script>
        <!--<script src="https://cdnjs.cloudflare.com/ajax/libs/angular-ui-router/0.2.10/angular-ui-router.js"></script>-->
        <script src="/javascripts/register.js"></script>

    </body>
</html>
